{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/screenshots/(.*)", "dest": "/screenshots/$1" },

    { "src": "/static/(.*)",      "dest": "/static/$1" },

    { "src": "/(.*)",             "dest": "/index.html" }
  ]
}
