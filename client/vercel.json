{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    // 1) Serve screenshots out of public/screenshots
    { "src": "/screenshots/(.*)", "dest": "/screenshots/$1" },

    // 2) CRA static assets
    { "src": "/static/(.*)",      "dest": "/static/$1" },

    // 3) All other URLs â†’ index.html (React SPA)
    { "src": "/(.*)",             "dest": "/index.html" }
  ]
}
